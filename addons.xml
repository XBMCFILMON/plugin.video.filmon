<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.FilmOn"
       name="FilmON"
       version="3.1.1"
       provider-name="FilmOn">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.t0mm0.common" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">FilmOn</summary>
    <description lang="en">Stream And Record From FilmON</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.FilmOn" name="FilmON's REPOSITORY" version="1.0" provider-name="FilmOn">
	<extension point="xbmc.addon.repository" name="FilmOn Addon Repository">
		<info compressed="false">https://github.com/XBMCFILMON/FILMON/raw/master/addons.xml</info>
		<checksum>https://github.com/XBMCFILMON/FILMON/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/XBMCFILMON/FILMON/raw/master/repo</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install FilmON Addons</summary>
		<description>Download and install addons from FilmOn</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
